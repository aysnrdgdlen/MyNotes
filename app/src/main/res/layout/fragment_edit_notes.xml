<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="sans-serif-medium"
            android:hint="Title.."
            android:id="@+id/edtTitle"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#D5D5D5"
            android:textStyle="normal"
            android:maxLines="1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="sans-serif-medium"
            android:hint="Subtitle.."
            android:id="@+id/edtSubTitle"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#D5D5D5"
            android:textStyle="normal"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pPink"
                android:background="@drawable/pink_dot"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:id="@+id/pBlue"
                android:background="@drawable/blue_dot"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:id="@+id/pPurple"
                android:background="@drawable/purple_dot"/>
        </LinearLayout>


        <EditText
            android:id="@+id/edtNotes"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_txt_shape"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:hint="Notes.."
            android:padding="15dp"
            android:textColorHint="#D5D5D5"
            android:textStyle="normal" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:src="@drawable/ic_baseline_done_24"
        android:backgroundTint="@color/mor_color" />

</FrameLayout>